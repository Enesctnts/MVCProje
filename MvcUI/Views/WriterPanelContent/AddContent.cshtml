@model  EntityLayer.Concrete.Content
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>İçerik Girişi</h1>
<br />
@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" name="HeadingId" value="@ViewBag.d" /> @*hidden gönderilern değerin sayfada gözükmemesini sağlıyor.*@
        @Html.Label("İçeriğinizi Yazın")
        @Html.TextAreaFor(w => w.ContentText,10,30, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.ContentText)
        <br />
        <button class="btn btn-info">Kaydet</button>

    </div>
}

